{
  "manifest_version": 2,
  "name": "iNat2Wiki Button",
  "version": "1.0",
  "description": "Add a button to iNaturalist observation pages to generate iNat2Wiki URL",
  
  "permissions": [
    "https://www.inaturalist.org/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.inaturalist.org/observations/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.ico"
  }
}